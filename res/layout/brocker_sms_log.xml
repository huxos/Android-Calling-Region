<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@id/txtBrockerPhoneLogTime"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtBrockerSmsLogName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text" />

            <TextView
                android:id="@+id/txtBrockerSmsLogText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:maxLines="1"
                android:minLines="1"
                android:maxLength="20"
                android:text="Text" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtBrockerSmsLogTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnBrockerSmsLogDelete"
            android:text="time" />

        <Button
            android:id="@+id/btnBrockerSmsLogDelete"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/delete" />
    </RelativeLayout>

</LinearLayout>